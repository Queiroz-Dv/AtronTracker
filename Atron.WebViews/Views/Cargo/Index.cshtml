@using Atron.Application.DTO;
@using Shared.DTO;
@using Shared.Services;
@using Newtonsoft.Json;
@using Atron.WebViews.Models;
@model CargoModel;

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <a asp-action="Cadastrar" class="btn btn-success">
                <span title="Cadastrar novo" class="fas fa-plus"></span> Cadastrar novo
            </a>
        </div>        
    </div>
</div>
<br />

<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cargo.Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.Cargo.Descricao)</th>
                <th>Departamento</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Cargos)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Descricao</td>                    
                    <td>@item.DepartamentoCodigo</td>

                    <td>
                        <a asp-action="Atualizar" asp-route-id="@item.Codigo" title="Atualizar" class="btn btn-warning">
                            <span class="fas fa-edit">Atualizar</span>
                        </a>

                        <a asp-action="Remover" asp-route-id="@item.Codigo" title="Remover" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Remover</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="PagerPartial" model="Model.PageInfo" />
</div>