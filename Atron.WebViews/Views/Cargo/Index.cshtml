@using Atron.Application.DTO;
@using Shared.DTO;
@using Shared.Services;
@using Newtonsoft.Json;
@using Atron.WebViews.Models;
@model List<CargoDTO>

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <a asp-action="Cadastrar" class="btn btn-success">
                <span title="Cadastrar novo" class="fas fa-plus"></span> Cadastrar novo
            </a>
        </div>        
    </div>
</div>
<br />

<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
                <th>Departamento</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Descricao</td>
                    @* <td>@item.DepartamentoCodigo - @item.DepartamentoDescricao</td> *@
                    <td>@item.DepartamentoCodigo</td>

                    <td>
                        <a asp-action="Atualizar" asp-route-id="@item.Codigo" title="Atualizar" class="btn btn-warning">
                            <span class="fas fa-edit">Edit</span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Codigo" title="Delete" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>