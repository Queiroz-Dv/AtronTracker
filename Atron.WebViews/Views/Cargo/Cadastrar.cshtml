@using Atron.Application.DTO;
@using Shared.DTO;
@using Shared.Services;
@using Newtonsoft.Json;
@using Atron.WebViews.Models;
@model CargoModel;

<link href="~/css/site.css" />

<h2 style="margin-bottom: 40px;">@ViewData["Title"]</h2>

<form asp-action="Cadastrar" method="post" class="form-horizontal">

    <div class="form-group row">
        <label asp-for="Cargo.Codigo" class="col-md-2 col-control-label font-weight-bold"></label>
        <div class="col-md-5 mb-3">
            <input asp-for="Cargo.Codigo" class="form-control" />
            <span asp-validation-for="Cargo.Codigo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Cargo.Descricao" class="col-md-2 col-form-label font-weight-bold"></label>
        <div class="col-md-7 mb-3">
            <input asp-for="Cargo.Descricao" class="form-control" />
            <span asp-validation-for="Cargo.Descricao" class="text-danger"></span>
        </div>
    </div>

    <div class="float-left">
        <h3>Departamentos</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="float-right">
                <div>
                    <p>
                        <input type="text" name="filter" id="codigoDepartamento" />
                        <input type="button" value="Filtrar" id="btnFiltrar" />
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div id="departamentosTable" class="form-group">
        @await Html.PartialAsync("Partials/Departamento/DepartamentosTablePartial", Model);
        <partial name="PagerPartial" model="Model.PageInfo" />
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-dark">Painel</a>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btnFiltrar").click(function () {
                var filter = $("#codigoDepartamento").val();
                $.ajax({
                    url: '@Url.Action("FiltrarDepartamentos", "Cargo")',
                    type: 'GET',
                    data: { filter: filter },
                    success: function (result) {
                        $("#departamentosTable").html(result);
                    }
                });
            });
        });
    </script>
}