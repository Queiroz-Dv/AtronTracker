@using Atron.Application.DTO;
@using Shared.DTO;
@using Shared.Services;
@using Newtonsoft.Json;
@using Atron.WebViews.Models;
@model CargoDTO;

<partial name="Partials/TitleLabel"></partial>

<form asp-action="Atualizar" method="post" class="form-horizontal">

    <div class="form-group row">
        <label asp-for="Codigo" class="col-md-2 col-control-label font-weight-bold"></label>
        <div class="col-md-5 mb-3">
            <input asp-for="Codigo" readonly="readonly" disabled="disabled" class="form-control" />
            <input hidden="hidden" asp-for="Codigo" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Descricao" class="col-md-2 col-form-label font-weight-bold"></label>
        <div class="col-md-7 mb-3">
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DepartamentoCodigo" class="col-md-2 col-form-label font-weight-bold">Departamentos</label>
        <div class="col-md-7 mb-3">
            <select asp-for="DepartamentoCodigo" id="departamentoCodigo" class="form-control" asp-items="@ViewBag.Departamentos">
                <option value="@ViewBag.CodigoDoDepartamentoRelacionado">Selecione um departamento</option>
            </select>
            <span asp-validation-for="DepartamentoCodigo" class="text-danger"></span>
        </div>
    </div>

    <partial name="Partials/BtnSubmitAtualizar"></partial>
</form>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/select2.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#departamentoCodigo").select2();
        });
    </script>
}
