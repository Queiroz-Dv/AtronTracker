@model DepartamentoDTO;

<link href="~/css/site.css" rel="stylesheet" />
<partial name="Partials/TitleLabel"></partial>
<form asp-action="Cadastrar" method="post" class="form-horizontal departamento-form">
    <div class="form-group row">
        <label asp-for="Codigo" class="col-md-2 control-label font-weight-bold"></label>
        <div class="col-md-5 mb-3">
            <input asp-for="Codigo" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Descricao" class="col-md-2 col-form-label font-weight-bolder"></label>
        <div class="col-md-7 mb-3">
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

    </div>

    <partial name="Partials/BtnSubmitCadastrar"></partial>
</form>
<script src="~/js/departamentoScript.js"></script>