@using Newtonsoft.Json
@using Communication.Extensions;
@using Shared.DTO
@using Shared.Extensions
@model Atron.Application.DTO.DepartamentoDTO

<h2>@ViewData["Title"]</h2>
<link href="~/css/site.css" rel="stylesheet" />
<form asp-action="Cadastrar" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">

            <label asp-for="Codigo" class="col-md-2 control-label font-weight-bold"></label>

            <div class="col-md-5" style="margin-bottom: 25px;">
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <label asp-for="Descricao" class="col-md-2 control-label font-weight-bolder"></label>

            <div class="col-md-7">
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Painel</a>
            </div>

        </div>

    </div>
</form>
<script src="~/js/departamentoScript.js"></script>