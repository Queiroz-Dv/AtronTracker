@model DepartamentoDTO;

<div class="d-flex justify-content-center align-items-center mid-height centered-container">
    <form asp-action="Atualizar" method="post">
        <partial name="Partials/TitleLabel"></partial>

        <div class="mb-4">
            <label asp-for="Codigo" class="form-label"></label>
            <input disabled="disabled" asp-for="Codigo" class="form-control" />
            <input hidden="hidden" asp-for="Codigo" />
        </div>

        <div class="mb-5">
            <label asp-for="Descricao" class="form-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <partial name="Partials/Buttons/BtnSubmitAtualizar"></partial>
    </form>
</div>
<script src="~/js/departamentoScript.js"></script>