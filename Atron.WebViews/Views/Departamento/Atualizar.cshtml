@model Atron.Application.DTO.DepartamentoDTO

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Atualizar" method="post">
            <div class="form-group">

                <label asp-for="Codigo" class="control-label col-md-2"></label>
                <div class="col-md-5">
                    <input disabled="disabled" asp-for="Codigo" />
                    <input hidden="hidden" asp-for="Codigo" />
                </div>


                <label asp-for="Descricao" class="control-label col-md-5"></label>
                <div class="col-md-8">
                    <input asp-for="Descricao" class="form-control" />
                </div>

                <span asp-validation-for="Descricao" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Painel</a>
            </div>

        </form>
    </div>
</div>