@model DepartamentoDTO

<link href="~/css/site.css" rel="stylesheet" />
<partial name="Partials/TitleLabel"></partial>
<form asp-action="Atualizar" method="post" class="form-horizontal">

	<div class="form-group row">
		<label asp-for="Codigo" class="control-label col-md-2 font-weight-bold"></label>
		<div class="col-md-5 mb-3">
			<input disabled="disabled" asp-for="Codigo" class="form-control" />
			<input hidden="hidden" asp-for="Codigo" />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Descricao" class="col-form-label col-md-2 font-weight-bold"></label>
		<div class="col-md-7 mb-3">
			<input asp-for="Descricao" class="form-control" />
			<span asp-validation-for="Descricao" class="text-danger"></span>
		</div>
	</div>	

	<partial name="Partials/BtnSubmitAtualizar"></partial>
</form>
<script src="~/js/departamentoScript.js"></script>