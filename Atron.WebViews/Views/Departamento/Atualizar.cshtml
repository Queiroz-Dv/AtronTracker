@using Atron.Application.DTO;
@using Newtonsoft.Json;
@using Communication.Extensions;
@using Shared.DTO;
@using Shared.Extensions;
@model DepartamentoDTO

<h2>@ViewData["Title"]</h2>
<link href="~/css/site.css" rel="stylesheet" />
<form asp-action="Atualizar" method="post" class="form-horizontal">
	<hr />
	<div class="form-group row">
		<label asp-for="Codigo" class="control-label col-md-2 font-weight-bold"></label>
		<div class="col-md-5 mb-3">
			<input disabled="disabled" asp-for="Codigo" class="form-control" />
			<input hidden="hidden" asp-for="Codigo" />
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Descricao" class="col-form-label col-md-2 font-weight-bold"></label>
		<div class="col-md-7 mb-3">
			<input asp-for="Descricao" class="form-control" />
			<span asp-validation-for="Descricao" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-10">
			<input type="submit" value="Atualizar" class="btn btn-primary" />
			<a asp-action="Index" class="btn btn-secondary">Painel</a>
		</div>
	</div>
</form>
<script src="~/js/departamentoScript.js"></script>