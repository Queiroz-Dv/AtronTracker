@model DepartamentoModel;

<partial name="Partials/TitleLabel"></partial>
<partial name="Partials/Buttons/BtnCadastrar"></partial>

<div class="panel panel-default">
    <partial name="Partials/Panels/FilterForm"></partial>
    <fieldset>
        <legend>Departamentos</legend>
        <div id="departamentos">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Departamento.Codigo)</th>
                        <th colspan="2">@Html.DisplayNameFor(model => model.Departamento.Descricao)</th>                        
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model.Entities)
                        {
                            <tr>
                                <td>@item.Codigo</td>
                                <td>@item.Descricao</td>
                                <td class="text-end">
                                    <partial name="Partials/Buttons/BtnAtualizar" model="item.Codigo" />
                                    <partial name="Partials/Buttons/BtnExcluir" model="item.Codigo" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <partial name="PagerPartial" model="Model.PageInfo" />
        </div>
    </fieldset>
</div>
<br />
<script src="~/js/departamentoScript.js"></script>
<partial name="Partials/ExcluirRegistro" for="Departamento"></partial>