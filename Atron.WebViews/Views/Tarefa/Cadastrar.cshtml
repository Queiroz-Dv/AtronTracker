@using Atron.Application.DTO;
@using Shared.DTO;
@using Shared.Services;
@using Newtonsoft.Json;
@using Atron.WebViews.Models;
@model TarefaDTO;

<h2 style="margin-bottom: 40px;">@ViewData["Title"]</h2>
<form id="tarefaForm" asp-action="Cadastrar" method="post" class="form-horizontal">

    <div class="form-group row">
        <label asp-for="UsuarioCodigo" class="col-md-2 col-form-label font-weight-bold">Usuários</label>
        <div class="col-md-7 mb-3" id="usuarioSelectContainer">
            <select asp-for="UsuarioCodigo" id="usuarioCodigo"
                    class="form-control" asp-items="@ViewBag.Usuarios">
                <option value="">Selecione um usuário</option>
            </select>
            <span asp-validation-for="UsuarioCodigo" class="text-danger"></span>
        </div>
    </div>

    <div>

    </div>

   

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-dark">Painel</a>
        </div>
    </div>
</form>


