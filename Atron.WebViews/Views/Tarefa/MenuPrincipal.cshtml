@model TarefaModel;

<partial name="Partials/TitleLabel"></partial>
<partial name="Partials/Buttons/BtnCadastrar"></partial>

<div class="panel panel-default">

    <partial name="Partials/Panels/FilterForm"></partial>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario.Cargo)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario.Departamento)</th>
                <th>@Html.DisplayNameFor(model => model.Tarefa.Titulo)</th>
            @*     <th>@Html.DisplayNameFor(model => model.Tarefa.EstadoDaTarefaDescricao)</th> *@
                <th>@Html.DisplayNameFor(model => model.Tarefa.DataInicial)</th>
                <th colspan="2">@Html.DisplayNameFor(model => model.Tarefa.DataFinal)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Entities)
            {
                <tr>
                   @*  <td>@item.NomeUsuario</td>
                    <td>@item.CargoDescricao</td>
                    <td>@item.DepartamentoDescricao</td> *@
                    <td>@item.Titulo</td>
                   @*  <td>@item.EstadoDaTarefaDescricao</td> *@
                    <td>@item.DataInicial.ToShortDateString()</td>
                    <td>@item.DataFinal.ToShortDateString()</td>

                    <td class="text-end">
                        <partial name="Partials/Buttons/BtnAtualizarPorId" model="item.Id" />
                        <partial name="Partials/Buttons/BtnExcluir" model="item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="PagerPartial" model="Model.PageInfo" />
</div>
<partial name="Partials/ExcluirRegistro" for="Tarefa"></partial>