@using Application.DTO
@model UsuarioDTO;
<div class="d-flex justify-content-center align-items-center mid-height centered-container">
    <form id="usuarioForm" asp-action="Cadastrar" method="post" class="col-9">

        <partial name="Partials/TitleLabel"></partial>

        <div class="col-9 mb-4 d-flex">
            <div class="col-6 pe-2">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" placeholder="Ex: QRZ, NLN, KLTBRS" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="col-6 ps-2">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>

        <div class="col-9 mb-4  d-flex">
            <div class="col-6 pe-2">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-6 ps-2">
                <label asp-for="Sobrenome" class="form-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 mb-3 d-flex">
            <div class="col-3 pe-2">
                <label asp-for="Salario" class="form-label"></label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="col-5 ps-2">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-4 ps-2">
                <label asp-for="DataNascimento" class="form-label">Data de nascimento</label>
                <input asp-for="DataNascimento" type="date" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 d-flex mb-4">
            <div class="col-6 pe-2 mb-3" id="departamentoSelectContainer">
                <label asp-for="DepartamentoCodigo" class="form-label">Departamentos</label>
                <select asp-for="DepartamentoCodigo" id="departamentoCodigo"
                        class="form-control" asp-items="@ViewBag.Departamentos">
                    <option value="">Selecione um departamento</option>
                </select>
                <span asp-validation-for="DepartamentoCodigo" class="text-danger"></span>
            </div>
            <div class="col-6 ps-2 mb-3" id="cargoSelectContainer">
                <label asp-for="CargoCodigo" class="form-label">Cargos</label>
                <select asp-for="CargoCodigo" id="cargoCodigo"
                        class="form-control" asp-items="@ViewBag.Cargos">
                    <option value="">Selecione um cargo</option>
                </select>
                <span asp-validation-for="CargoCodigo" class="text-danger"></span>
            </div>
        </div>

        <partial name="Partials/Buttons/BtnSubmitCadastrar"></partial>
    </form>
</div>

@section Scripts {
    <script type="module" src="/js/views/cadastrarUsuario.js"></script>
}