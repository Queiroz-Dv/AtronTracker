@using Atron.Application.DTO;
@using Shared.DTO;
@using Shared.Services;
@using Newtonsoft.Json;
@using Atron.WebViews.Models;
@model UsuarioModel;

<link href="~/css/site.css" />

<partial name="Partials/TitleLabel"></partial>
<partial name="Partials/BtnCadastrar"></partial>

<div class="panel panel-default">
    <form asp-controller="Usuario" asp-action="Index" asp-route-filter="@ViewData["Filter"]" method="post">
        <p>
            <input type="text" name="filter" />
            <input type="submit" value="Filtrar" />
        </p>
    </form>
    <fieldset>
        <legend class="fw-semibold">Usuários</legend>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                    <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                    <th>@Html.DisplayNameFor(model => model.Departamento)</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Entities)
                {
                    <tr>
                        <td>@item.Codigo - @item.Nome @item.Sobrenome</td>

                        <td>@(item.Cargo?.ObterCodigoComDescricao() ?? string.Empty)</td>
                        <td>@(item.Departamento?.ObterCodigoComDescricao() ?? string.Empty)</td>

                        <td class="text-end">
                            <partial name="Partials/BtnAtualizar" model="item.Codigo" />
                            <partial name="Partials/BtnExcluir" model="item.Codigo" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>

    <partial name="PagerPartial" model="Model.PageInfo" />
</div>
<partial name="Partials/ExcluirRegistro" for="Usuario"></partial>