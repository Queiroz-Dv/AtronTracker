@model TarefaDTO
@{
    var actionPage = ViewData["ActionPage"];
}

<form id="formTarefa" asp-action="@actionPage" method="post">
    
    <input hidden type="text" value="@actionPage" id="actionPage" />
    <input asp-for="Id" value="@Model.Id" type="text" id="tarefaId" hidden="hidden" />

    <fieldset>
        <legend>Informações do Usuário</legend>
        <div class="row mb-4 mt-5">
            <div class="col-md-3">
                <label asp-for="UsuarioCodigo" class="form-label">Usuário</label>
                <input asp-for="UsuarioCodigo" type="text" class="form-control" disabled />
                <input asp-for="UsuarioCodigo" hidden="hidden" />
            </div>
          @*   <div class="col-md-5">
                <label asp-for="CargoDescricao" class="form-label">Cargo</label>
                <input asp-for="CargoDescricao" type="text" class="form-control" disabled />
            </div>
            <div class="col-md-4">
                <label asp-for="DepartamentoDescricao" class="form-label">Departamento</label>
                <input asp-for="DepartamentoDescricao" type="text" class="form-control" disabled />
            </div> *@
        </div>
    </fieldset>

    <hr />
    
    <fieldset>
        <legend>Nova Tarefa</legend>        
        <div class="mb-4 mt-5">
            <label asp-for="Titulo" class="form-label">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Conteudo" class="form-label">Descrição</label>
            <textarea asp-for="Conteudo" class="form-control"></textarea>
            <span asp-validation-for="Conteudo" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <partial name="Partials/Tarefa/FormTarefaDatas" model="@Model"></partial>
        </div>        
        <div class="row mb-4">
            <div class="col-md-4">
              @*   <label asp-for="EstadoDaTarefaId" class="form-label">Estado</label>
                <select asp-for="EstadoDaTarefaId" class="form-control" asp-items="@ViewBag.TarefaEstados">
                    <option value="">Selecione o estado da tarefa</option>
                </select>
                <span asp-validation-for="EstadoDaTarefaId" class="text-danger"></span> *@
            </div>
        </div>
    </fieldset>

    @if (actionPage.Equals("Cadastrar"))
    {
        <partial name="Partials/Buttons/BtnSubmitCadastrar"></partial>
    }
    else
    {
        <partial name="Partials/Buttons/BtnSubmitAtualizar"></partial>
    }
</form>