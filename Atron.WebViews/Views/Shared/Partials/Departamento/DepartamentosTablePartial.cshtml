@using Atron.Application.DTO;

@model CargoModel;


<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(m => Model.Departamento.Codigo)</th>
            <th>@Html.DisplayNameFor(m => Model.Departamento.Descricao)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td class="form-check">
                    <input type="radio" class="form-check-input" style="margin-left: 15px;"
                    asp-for="@Model.Cargo.DepartamentoCodigo" value="@item.Codigo" />
                </td>
                <td>@item.Codigo</td>
                <td>@item.Descricao</td>
            </tr>
        }
    </tbody>
</table>