@model DepartamentoModel


<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(m => m.Departamentos.First().Codigo)</th>
            <th>@Html.DisplayNameFor(m => m.Departamentos.First().Descricao)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td class="form-check">
                    <input type="radio" class="form-check-input" style="margin-left: 15px;" asp-for="Departamento.Codigo" value="@item.Codigo" />
                </td>
                <td>@item.Codigo</td>
                <td>@item.Descricao</td>
            </tr>
        }
    </tbody>
</table>