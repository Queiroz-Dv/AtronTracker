@{
    var usuarioAutenticado = Context.User.Identity.IsAuthenticated;
}

@if (usuarioAutenticado)
{
    <li class="nav-item">
        <a class="nav-link text-capitalize" asp-area="" asp-controller="ApplicationLogin" asp-action="Logout"
           style="color: blue">@Context.User.Identity.Name - Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-capitalize" asp-area="" asp-controller="ApplicationLogin" asp-action="Login"
           style="color: blue">Login</a>
    </li>
}