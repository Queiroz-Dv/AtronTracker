@using Atron.Application.DTO;
@using Shared.DTO;
@using Atron.WebViews.Models;
@model PageInfoDTO;

<div class="container">
    @if (Model.Entities is not null)
    {
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">

                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Departamento"
                           asp-action="Index"
                           asp-route-itemPage="@(Model.CurrentPage - 1)"
                           aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Anterior</span>
                        </a>
                    </li>

                }

                @for (int pager = Model.StartPage; pager <= Model.EndPage; pager++)
                {
                    <li class="page-item" @(pager == Model.CurrentPage ? "active" : "")>
                        <a class="page-link"
                           asp-controller="Departamento" asp-action="Index"
                           asp-route-filter="@Model.Filter"
                           asp-route-itemPage="@pager">@pager</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Departamento"
                           asp-action="Index"
                           asp-route-itemPage="@(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Próximo</span>
                        </a>
                    </li>
                }

            </ul>
        }
    }
</div>