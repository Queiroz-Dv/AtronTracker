@model RegisterDTO;

<h3>@ViewData["Title"]</h3>
<div class="row">
	<div class="col-md-12">
		<form asp-controller="Account" asp-action="Register" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Passsword"></label>
				<input asp-for="Passsword" class="form-control" />
				<span asp-validation-for="Passsword" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ConfirmPasssword"></label>
				<input asp-for="ConfirmPasssword" class="form-control" />
				<span asp-validation-for="ConfirmPasssword" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-outline-dark">Registrar</button>
			<a asp-controller="Home" asp-action="Index" class="btn btn-link">Retornar</a>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
