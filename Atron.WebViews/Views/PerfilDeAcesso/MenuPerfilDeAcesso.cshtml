@model PerfilDeAcessoModel;

<partial name="Partials/TitleLabel"></partial>

<div class="row mb-4">
    <div class="d-flex pull-left">
        <div class="me-3">
            <partial name="Partials/Buttons/BtnPainel"></partial>
        </div>
        <partial name="Partials/Buttons/BtnCadastrar"></partial>
    </div>
</div>

<div class="panel panel-default">
    <partial name="Partials/Panels/FilterForm"></partial>
    <fieldset>
        <legend class="fw-semibold">Perfis de Acesso</legend>
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PerfilDeAcesso.Codigo)</th>
                    <th>@Html.DisplayNameFor(model => model.PerfilDeAcesso.Descricao)</th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Entities)
                {
                    <tr>
                        <td>@item.Codigo - @item.Descricao</td>
                        <td>@item.Descricao</td>
                      
                        <td class="text-end">
                            <partial name="Partials/Buttons/BtnAtualizar" model="item.Codigo" />
                            <partial name="Partials/Buttons/BtnExcluir" model="item.Codigo" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
    <partial name="PagerPartial" model="Model.PageInfo" />
</div>
<partial name="Partials/ExcluirRegistro" for="PerfilDeAcesso"></partial>
