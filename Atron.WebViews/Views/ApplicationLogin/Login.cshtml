@model LoginDTO;

<div class="container d-flex align-items-center justify-content-center full-height">
    <div class="card login-card">
        <h2 class="text-center mb-2">Atron Tracker</h2>
        <form asp-controller="ApplicationLogin" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-2">
                <div class="input-group">
                    <div class="input-group-prepend p-2">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                    <input  class="form-control" placeholder="Digite o código do seu usuário" />
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="input-group">
                    <div class="input-group-prepend p-2">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                    <input  type="password" class="form-control" placeholder="Digite sua senha" />
                </div>
            </div>

            <div class="d-grid gap-2 text-center mb-2">
                <button type="submit" class="btn btn-outline-primary">Login</button>
                <a asp-controller="ApplicationRegister" asp-action="Registrar" class="btn btn-outline-secondary">Registrar</a>
            </div>
        </form>
    </div>
    <partial name="Partials/Panels/Footer"></partial>
</div>


@section Scripts {
    <script src="~/js/auth.js"></script>
}