@model PersonalTracking.Models.DepartmentModel

@{
    ViewBag.Title = " Department Details";
}

<h2>Department Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Department")
        </dt>

        <dd class="border border-info p-2">
            @Html.DisplayFor(model => model.DepartmentModelName)
